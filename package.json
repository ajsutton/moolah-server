{
  "name": "moolah-server",
  "version": "1.0.0",
  "description": "Back-end server for Moolah money tracker.",
  "main": "index.js",
  "repository": "git@github.com:ajsutton/moolah-server.git",
  "scripts": {
    "dev": "nodemon index.js --exec node",
    "start": "node index.js",
    "test": "npm run migrate-db && npm run unit-test && npm run dao-test && npm run integration-test",
    "test-watch": "NODE_ENV=test mocha --watch 'test/**/*.spec.js'",
    "unit-test": "NODE_ENV=test mocha 'test/unit/**/*.spec.js'",
    "unit-test-watch": "NODE_ENV=test mocha --watch 'test/unit/**/*.spec.js'",
    "dao-test": "NODE_ENV=test mocha 'test/db/**/*.spec.js'",
    "db-test-watch": "NODE_ENV=test mocha --watch 'test/db/**/*.spec.js'",
    "integration-test": "NODE_ENV=test mocha 'test/integration/**/*.spec.js'",
    "integration-test-watch": "NODE_ENV=test mocha --watch 'test/integration/**/*.spec.js'",
    "migrate-db": "cd db && node migrate.js migrate",
    "rollback-db": "cd db && node migrate.js rollback",
    "create-migration": "cd db && node migrate.js create"
  },
  "author": "Adrian Sutton <adrian@symphonious.net>",
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^4.0.2",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "proxyquire": "1.8.0",
    "sinon": "^2.3.5"
  },
  "dependencies": {
    "boom": "^5.1.0",
    "good": "^7.2.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.2",
    "hapi": "^16.4.3",
    "hapi-async-handler": "^1.0.3",
    "hapi-auth-google": "^16.1.0",
    "hapi-router": "^3.5.0",
    "joi": "^10.6.0",
    "jsonwebtoken": "^7.4.1",
    "node-mysql": "^0.4.2",
    "uuid": "^3.1.0"
  }
}
