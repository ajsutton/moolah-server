{
  "name": "moolah-server",
  "version": "1.0.0",
  "description": "Back-end server for Moolah money tracker.",
  "main": "index.js",
  "repository": "git@github.com:ajsutton/moolah-server.git",
  "scripts": {
    "dev": "NODE_ENV=dev nodemon index.js --exec node",
    "start": "NODE_ENV=production node index.js",
    "test": "yarn run migrate-db && NODE_ENV=dev mocha 'test/**/*.spec.js'",
    "test-watch": "NODE_ENV=dev mocha --watch 'test/**/*.spec.js'",
    "unit-test": "NODE_ENV=dev mocha 'test/unit/**/*.spec.js'",
    "unit-test-watch": "NODE_ENV=dev mocha --watch 'test/unit/**/*.spec.js'",
    "dao-test": "NODE_ENV=dev mocha 'test/db/**/*.spec.js'",
    "db-test-watch": "NODE_ENV=dev mocha --watch 'test/db/**/*.spec.js'",
    "integration-test": "NODE_ENV=dev mocha 'test/integration/**/*.spec.js'",
    "integration-test-watch": "NODE_ENV=dev mocha --watch 'test/integration/**/*.spec.js'",
    "migrate-db": "cd db && node migrate.js migrate",
    "rollback-db": "cd db && node migrate.js rollback",
    "create-migration": "cd db && node migrate.js create"
  },
  "author": "Adrian Sutton <adrian@symphonious.net>",
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^4.0.2",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "sinon": "^3.2.0"
  },
  "dependencies": {
    "bell": "^8.7.0",
    "boom": "^5.1.0",
    "configue": "^0.16.0",
    "date-fns": "^1.28.5",
    "get-env": "^0.5.10",
    "good": "^7.2.0",
    "good-console": "^6.4.0",
    "good-file": "^6.0.1",
    "good-squeeze": "^5.0.2",
    "hapi": "^16.4.3",
    "hapi-async-handler": "^1.0.3",
    "hapi-auth-cookie": "^7.0.0",
    "hapi-plugin-mysql": "^5.0.0",
    "hapi-router": "^3.5.0",
    "joi": "^10.6.0",
    "node-mysql": "^0.4.2",
    "uuid": "^3.1.0"
  }
}
